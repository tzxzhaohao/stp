{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "strict": true,
    "jsx": "preserve",
    "moduleResolution": "node",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "useDefineForClassFields": true,
    "sourceMap": true,
    "noImplicitThis": false, // js/ts 混用时设为false
    "baseUrl": ".",
    "types": [
      "webpack-env",
      "element-plus/global"
    ],
    "paths": {
      "@/*": [
        "./src/*"
      ]
    },
    "lib": [
      "esnext",
      "dom",
      "dom.iterable",
      "scripthost"
    ]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "tests/**/*.ts",
    "tests/**/*.tsx",
    "global.d.ts",
    "node_modules/.pnpm/unplugin-auto-import@0.17.3_@vueuse+core@10.2.1/node_modules/unplugin-auto-import/auto-imports.d.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
